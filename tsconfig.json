{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": ".",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules", "dist"]
}
